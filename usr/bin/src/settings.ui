<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="Ml4wSettingsWindow" parent="AdwPreferencesWindow">
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="title">ML4W Dotfiles Settings</property>
    <child>
      <object class="AdwPreferencesPage" id="settings_page">
        <property name="title">ML4W Dotfiles Settings</property>
        <property name="icon-name">settings-symbolic</property>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Waybar Clock Format</property>
            <property name="description" translatable="true">Choose from some default clock formats or enter your own.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_timeformatspecifications">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="label">Format Specifications</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Time Format</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_timeformats">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Date Format</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_dateformats">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwEntryRow" id="custom_datetime">
                <property name="title" translatable="true">Custom Date/Time Format</property>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Animation Variations</property>
            <property name="description" translatable="true">Choose from the available variations of your Hyprland configuration.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_animations">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="icon-name">folder-open-symbolic</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Animations</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_animations">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList" id="animations_list">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Waybar Settings</property>
            <property name="description" translatable="true">Change the color-scheme of the application.</property>

            <child>
              <object class="AdwSwitchRow" id="waybar_show_window">
                <property name="title" translatable="true">Show Window Module</property>
                <property name="action-name">app.waybar_show_window</property>
              </object>
            </child>

            <child>
              <object class="AdwSwitchRow" id="waybar_show_screenlock">
                <property name="title" translatable="true">Show Screen Lock Module</property>
                <property name="action-name">app.waybar_show_screenlock</property>
              </object>
            </child>

            <child>
              <object class="AdwSwitchRow" id="waybar_show_chatgpt">
                <property name="title" translatable="true">Show ChatGPT Module</property>
                <property name="action-name">app.waybar_show_chatgpt</property>
              </object>
            </child>

            <child>
              <object class="AdwSwitchRow" id="waybar_show_network">
                <property name="title" translatable="true">Show Network Module</property>
                <property name="action-name">app.waybar_show_network</property>
              </object>
            </child>

            <child>
              <object class="AdwSwitchRow" id="waybar_show_systray">
                <property name="title" translatable="true">Show Systray Module</property>
                <property name="action-name">app.waybar_show_systray</property>
              </object>
            </child>

            <child>
              <object class="AdwSpinRow" id="waybar_workspaces">
                <property name="title" translatable="true">Workspaces</property>
                <property name="adjustment">
                  <object class="GtkAdjustment">
                    <property name="lower">5</property>
                    <property name="upper">10</property>
                    <property name="step-increment">1</property>
                    <property name="value">5</property>
                  </object>
                </property>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Rofi</property>
            <property name="description" translatable="true">Define properties for the Rofi Launcher.</property>

            <child>
              <object class="AdwSpinRow" id="rofi_bordersize">
                <property name="title" translatable="true">Rofi Border Size</property>
                <property name="action-name">app.rofi_bordersize</property>
                <property name="adjustment">
                  <object class="GtkAdjustment">
                    <property name="lower">0</property>
                    <property name="upper">10</property>
                    <property name="step-increment">1</property>
                    <property name="value">3</property>
                  </object>
                </property>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Waybar Default Applications</property>
            <property name="description" translatable="true">Choose the default applications for Waybar.</property>

            <child>
              <object class="AdwEntryRow" id="default_browser">
                <property name="title" translatable="true">Browser</property>
              </object>
            </child>

            <child>
              <object class="AdwEntryRow" id="default_filemanager">
                <property name="title" translatable="true">File Manager</property>
              </object>
            </child>

            <child>
              <object class="AdwEntryRow" id="default_networkmanager">
                <property name="title" translatable="true">Network Manager</property>
              </object>
            </child>

            <child>
              <object class="AdwEntryRow" id="default_softwaremanager">
                <property name="title" translatable="true">Software Manager</property>
              </object>
            </child>

            <child>
              <object class="AdwEntryRow" id="default_terminal">
                <property name="title" translatable="true">Terminal</property>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Environment Variations</property>
            <property name="description" translatable="true">Choose from the available variations of your Hyprland configuration.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_environments">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="icon-name">folder-open-symbolic</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Environments</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_environments">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Monitor Variations</property>
            <property name="description" translatable="true">Choose from the available variations of your Hyprland configuration.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_monitors">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="icon-name">folder-open-symbolic</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Monitors</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_monitors">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Decoration Variations</property>
            <property name="description" translatable="true">Choose from the available variations of your Hyprland configuration.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_decorations">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="icon-name">folder-open-symbolic</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Decorations</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_decorations">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Window Variations</property>
            <property name="description" translatable="true">Choose from the available variations of your Hyprland configuration.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_windows">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="icon-name">folder-open-symbolic</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Windows</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_windows">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Windowrule Variations</property>
            <property name="description" translatable="true">Choose from the available variations of your Hyprland configuration.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_windowrules">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="icon-name">folder-open-symbolic</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Windowrules</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_windowrules">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Keybinding Variations</property>
            <property name="description" translatable="true">Choose from the available variations of your Hyprland configuration.</property>
            <child type="header-suffix">
              <object class="GtkButton" id="open_keybindings">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="icon-name">folder-open-symbolic</property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Keybindings</property>
                <child type="suffix">
                  <object class="GtkDropDown" id="dd_keybindings">
                    <property name="enable-search">true</property>
                    <property name="halign">3</property>
                    <property name="valign">3</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>